{
  "rules": [
    {
      "logic": "All",
      "conditions": [
        {"field":  "from_email", "predicate":  "contains", "value": "@amazonaws.com"},
        {"field":  "subject", "predicate":  "does not contain", "value":  "amazon"},
        {"field": "date_received", "predicate":  "greater than days", "value": 2}
      ],
      "actions": [
        {"action":  "mark_as_unread"},
        {"action":  "move_message", "folder_name":  "aws"}
      ]
    }
  ]
}